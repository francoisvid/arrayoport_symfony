{% extends 'base.html.twig' %}

{% block title %}ArrayOport{{ controller_name }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<section class="carte">
    {% for carte in cartes %}
        <article>
            <h2>{{ carte.nom }}</h2>
            <div class="metadate">Créer le 19/07/18 à 19:30 dans la catégorie Les classiques</div>
            <div class="content">
                <img src="http://placehold.it/350x150" alt="">
                <p>{{ carte.description }}</p>
                <a href="{{ path('carte_id')}}" class="btn btn-primary">Lire la suite</a>
            </div>
        </article>
    {% endfor %}
</section>

{% endblock %}
